FROM protik77/python3-sensehat

RUN apt-get update && apt-get upgrade -y

RUN apt-get install -y \
    vim \
    python3-dev \
    python3-pip \
    git

RUN pip3 install pytz pyserial requests
RUN git clone https://github.com/KoreTsune/sensehat_socket.git

